<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Given url</th>
        <th>Short Link</th>
        <th>Clicks</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody class="links-data">
      <%  @top_links.each do |link| %>
        <tr>
          <td><%= link.given_url %></td>
          <td><%= link_to "#{custom_url}/#{link.slug}", link.slug, target: '_blank' %></td>  
          <td><%= link.clicks %></td>
          <td><%= link_to 'Show', link %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%=  paginate @top_links %>